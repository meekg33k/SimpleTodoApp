<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uduakobongeren.simpletodo.ui.EditItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editItem"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editItem"
        android:layout_marginTop="36dp"
        android:text="Edit Item Below"
        android:textSize="20sp"
        tools:text="Edit Item Below:" />

    <EditText
        android:id="@+id/editItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="89dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/saveEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editItem"
        android:layout_alignStart="@+id/editItem"
        android:layout_below="@+id/editItem"
        android:layout_marginTop="47dp"
        android:background="@color/myColorAccent"
        android:text="Save" />

</RelativeLayout>
